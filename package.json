{
  "name": "commercio",
  "version": "1.6.0",
  "description": "Ein modulares Warenwirtschaftssystem (ERP) f√ºr Node.js mit PostgreSQL und Drizzle ORM",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "db",
    "modules"
  ],
  "keywords": [
    "erp",
    "warehouse",
    "inventory",
    "commerce",
    "drizzle",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "tsc && npm run copy:migrations",
    "copy:migrations": "node -e \"require('fs').cpSync('src/drizzle', 'dist/db/drizzle', {recursive: true, force: true})\"",
    "dev": "tsx watch src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:manual": "tsx scripts/run-migration.ts",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest run tests/e2e",
    "test:unit": "vitest run tests/unit"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3",
    "pino": "^9.3.0",
    "pino-pretty": "^11.2.0"
  }
}
